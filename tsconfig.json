{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*_test.ts", "node_modules"]
}
